@model ProductDto
@{
}

<div class="col-md-8 m-auto rounded p-5 border">
    <h3 class="text-center mb-5">Product Create</h3>

    <form method="post" enctype="multipart/form-data">
        <div class="row mb-3">
            <label class="col-sm-4 col-form-label mb-3">Name</label>
            <div class="col-sm-8">
                <input class="form-control" asp-for="Name" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
        <div class="row mb-3">
            <label class="col-sm-4 mb-3 col-form-label">Brand</label>
            <div class="col-sm-8">
                <input class="form-control" asp-for="Brand" />
                <span asp-validation-for="Brand" class="text-danger"></span>
            </div>
        </div>
        <div class="row mb-3">
            <label class="col-sm-4 mb-3 col-form-label">Category</label>
            <div class="col-sm-8">
                <select class="form-select" asp-for="Category">
                    <option value="Others">Others</option>
                    <option value="Macbook">Laptop</option>
                    <option value="Lenovo">Phone</option>
                    <option value="Acer">SoundBox</option>
                    <option value="HP">Earphone</option>
                </select>
            </div>
        </div>
        <div class="row mb-3">
            <label class="col-sm-4 mb-3 col-form-label">Price</label>
            <div class="col-sm-8">
                <input class="form-control" asp-for="Price" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
        </div>
        <div class="row mb-3">
            <label class="col-sm-4 mb-3 col-form-label">Description</label>
            <div class="col-sm-8">
                <input class="form-control" asp-for="Description" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
        </div>
        <div class="row mb-3">
            <label class="col-sm-4 mb-3 col-form-label">Image</label>
            <div class="col-sm-8">
                <input class="form-control" asp-for="ImageFile" />
                <span asp-validation-for="ImageFile" class="text-danger"></span>
            </div>
        </div>
        <div class="row">
            <div class="offset-sm-4 col-sm-4 d-grid">
                <button type="submit" class="btn btn-primary">Submit</button>
            </div>
            <div class="col-sm-4 d-grid">
                <a class="btn btn-sm btn-secondary" asp-controller="Product" asp-action="Index" role="btn">Cancel</a>
            </div>
        </div>
    </form>
</div>
